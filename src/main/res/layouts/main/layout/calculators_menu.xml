<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
<ScrollView
    android:id="@+id/scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/max_btn_height"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        >
        <!-- app_icon_layout-->
        <LinearLayout
            android:id="@+id/app_icon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/menu_icon"
                />

        </LinearLayout>


    <!-- price_calc_btn_layout -->
        <LinearLayout
            android:id="@+id/price_calc_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/app_icon_layout"
            >
            <Button
                android:id="@+id/price_calculator_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/price_calculator"

                />
        </LinearLayout>

<!-- other_calc_layout -->
        <LinearLayout
            android:id="@+id/other_calc_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/price_calc_btn_layout"
            >
            <Button
                android:id="@+id/other_calculator_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/other_calculator"

                />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
