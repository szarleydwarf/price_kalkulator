<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/max_btn_height"
        >
        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/price_calculator_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".PriceCalculatorActivity"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/large_text"
                android:textColor="@color/red"
                android:text="@string/app_name"
                android:gravity="center"
                />

        </RelativeLayout>
    </ScrollView>

    <!--google add layout-->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/blue_bcg_border"
        android:layout_marginTop="5dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/scroll_view"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_mob_banner">
    </com.google.android.gms.ads.AdView>
</androidx.constraintlayout.widget.ConstraintLayout>