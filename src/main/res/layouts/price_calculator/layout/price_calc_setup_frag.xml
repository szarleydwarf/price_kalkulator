<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/max_btn_height"
    >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_gravity="top"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    >

        <!--todo values_btn_layout-->
        <LinearLayout
            android:id="@+id/values_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            >

            <Button
                android:id="@+id/btn_price_calculator_values"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/values_btn_text"
                />

        </LinearLayout>

        <!--todo appearance_btn_layout-->
        <LinearLayout
            android:id="@+id/appearance_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/values_btn_layout"
            >
            <Button
                android:id="@+id/btn_price_calculator_appearance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/appearance_btn_text"
                />

        </LinearLayout>

        <!--todo eula_btn_layout-->
        <LinearLayout
            android:id="@+id/eula_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/appearance_btn_layout"
            >

            <Button
                android:id="@+id/btn_eula"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/eula_btn_text"
                />

        </LinearLayout>


        <!--todo contact_layout-->
        <LinearLayout
            android:id="@+id/contact_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/eula_btn_layout"
            >

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/contact_btn_text"
                />

        </LinearLayout>

        <!--todo other apps-->

        <!--todo go_back_layout-->
        <LinearLayout
            android:id="@+id/go_back_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/contact_btn_layout"
            >

            <Button
                android:id="@+id/btn_go_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/go_back_btn_text"
                />

        </LinearLayout>

        <!-- todo home_layout -->
        <LinearLayout
            android:id="@+id/home_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/go_back_btn_layout"
            >

            <Button
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/home_btn_text"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

    <!--google add layout-->
<com.google.android.gms.ads.AdView
    android:id="@+id/adViewB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/blue_bcg_border"
    android:layout_marginTop="5dp"
    ads:layout_constraintBottom_toBottomOf="parent"
    ads:layout_constraintStart_toStartOf="parent"
    ads:layout_constraintEnd_toEndOf="parent"
    ads:layout_constraintTop_toBottomOf="@+id/scroll_view"
    ads:adSize="BANNER"
    ads:adUnitId="@string/ad_mob_test"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
