<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_gravity="top"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    >

        <!--todo values_btn_layout-->
        <LinearLayout
            android:id="@+id/values_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_15"
            >
<!--            android:layout_below="@+id/app_name_layout"
-->
            <Button
                android:id="@+id/btn_price_calculator_values"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:layout_margin="@dimen/margin_15"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/other_calculator"
                />

        </LinearLayout>

        <!--todo appearance_btn_layout-->
        <LinearLayout
            android:id="@+id/appearance_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@drawable/blue_bcg_border"
            android:layout_below="@+id/values_btn_layout"
            >
            <Button
                android:id="@+id/btn_price_calculator_appearance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/max_btn_height"
                android:background="@drawable/skew_btn"
                android:layout_margin="@dimen/margin_15"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/white"
                android:text="@string/other_calculator"
                />

        </LinearLayout>

        <!--todo eula_btn_layout-->

        <!--todo contact_layout-->

        <!--todo other apps-->

        <!--todo go_back_layout-->

        <!--todo google add layout-->

    </RelativeLayout>
</ScrollView>