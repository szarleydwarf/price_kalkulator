<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_icon"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_tag_64"
            android:contentDescription="@string/values_btn_text"
            />
    </LinearLayout>

    <!-- go_back_layout-->
    <LinearLayout
        android:id="@+id/go_back_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/home_btn_layout"
        >

        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/max_btn_height"
            android:background="@drawable/skew_btn"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="@string/go_back_btn_text"
            />

    </LinearLayout>

    <!--  home_layout -->
    <LinearLayout
        android:id="@+id/home_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adViewB"
      >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/max_btn_height"
            android:background="@drawable/skew_btn"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="@string/home_btn_text"
            />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll_view_pc_values"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:fillViewport="true"
        android:layout_above="@id/go_back_btn_layout"
        android:layout_below="@id/value_icon"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <FrameLayout
                android:id="@+id/pc_values_place_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </FrameLayout>



        </RelativeLayout>
    </ScrollView>

