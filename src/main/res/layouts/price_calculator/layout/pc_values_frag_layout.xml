<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--todo Change to scrollview add framelayout's
    -->
    <!-- value_icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_icon"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_tag_64"
            android:contentDescription="@string/values_btn_text"
            />
    </LinearLayout>

<!--  scroll_view_pc_values  -->
    <ScrollView
        android:id="@+id/scroll_view_pc_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:fillViewport="true"

        >
        <FrameLayout
            android:id="@+id/pc_tax_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_profit_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_extra_1_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_extra_2_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_extra_3_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_extra_4_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pc_extra_5_place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
    </ScrollView>

    <!-- go_back_layout-->
    <LinearLayout
        android:id="@+id/go_back_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/max_btn_height"
            android:background="@drawable/skew_btn"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="@string/go_back_btn_text"
            />

    </LinearLayout>

    <!--  home_layout -->
    <LinearLayout
        android:id="@+id/home_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/max_btn_height"
            android:background="@drawable/skew_btn"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/white"
            android:text="@string/home_btn_text"
            />

    </LinearLayout>


</LinearLayout>