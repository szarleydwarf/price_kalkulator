<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/max_btn_height_2"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            >
            <!-- settings_icon_layout-->
            <LinearLayout
                android:id="@+id/eula_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eula"
                    android:contentDescription="@string/menu_icon"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/eula_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/eula_icon_layout"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:text="@string/eula"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        ads:layout_constraintTop_toBottomOf="@+id/scroll_view"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="@dimen/back_btn_width"
            android:layout_height="@dimen/max_btn_height"
            android:background="@drawable/skew_btn"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text"
            android:text="@string/go_back_btn_text"
            />
    </LinearLayout>

    <!--google add layout-->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_bcg_border"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_mob_test"
        ads:layout_constraintTop_toBottomOf="@+id/linear_layout"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout >