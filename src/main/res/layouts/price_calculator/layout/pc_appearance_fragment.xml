<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_pc_appearance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            >
            <!-- appearance_icon-->
            <LinearLayout
                android:id="@+id/appearance_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/appearance"
                    android:contentDescription="@string/menu_icon"
                    />

            </LinearLayout>

            <!-- fields_to_display_layout-->
            <LinearLayout
                android:id="@+id/fields_to_display_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/appearance_icon"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                >
                <TextView
                    android:id="@+id/tv_fields_to_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/fields_to_display_text"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_border"
                    />
                <CheckBox
                    android:id="@+id/chkb_profit_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/profit"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <CheckBox
                    android:id="@+id/chkb_tax_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/tax"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <CheckBox
                    android:id="@+id/chkb_extra_costs_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/extra_costs"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
            </LinearLayout>

            <!-- no_of_extra_costs_layout-->
            <LinearLayout
                android:id="@+id/no_of_extra_costs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_below="@id/fields_to_display_layout"
                >
                <TextView
                    android:id="@+id/tv_no_of_extras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/no_of_extras_text"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_border"
                    />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rd_gr_no_of_extra_costs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_below="@id/no_of_extra_costs_layout"
                >
                <RadioButton
                    android:id="@+id/rbtn_one_extra_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/one"
                    android:gravity="center"
                    android:checked="true"
                    android:background="@drawable/blue_bcg_border"
                    />
                <RadioButton
                    android:id="@+id/rbtn_two_extra_costs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/two"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    />
                <RadioButton
                    android:id="@+id/rbtn_three_extra_costs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/three"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    />
                <RadioButton
                    android:id="@+id/rbtn_four_extra_costs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/four"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    />
                <RadioButton
                    android:id="@+id/rbtn_five_extra_costs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/yellow"
                    android:text="@string/five"
                    android:gravity="center"
                    android:background="@drawable/blue_bcg_border"
                    />
            </RadioGroup>

            <!-- orientation_layout-->
            <LinearLayout
                android:id="@+id/orientation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_below="@id/rd_gr_no_of_extra_costs"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orientation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:textAlignment="center"
                    android:background="@drawable/rounded_border"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_btn_v"
                        android:background="@drawable/vertical"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:contentDescription="@string/vertical"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_btn_h"
                        android:background="@drawable/horizontal"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_10"
                        android:contentDescription="@string/horizontal"
                        />
                </LinearLayout>
            </LinearLayout>


            <!-- todo color_scheme_layout-->
            <LinearLayout
                android:id="@+id/color_scheme_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/orientation_layout"
                >

            </LinearLayout>


            <!-- todo language_layout-->
            <LinearLayout
                android:id="@+id/language_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/color_scheme_layout"
                >

            </LinearLayout>


            <!-- todo ??? sounds_layout-->
            <LinearLayout
                android:id="@+id/sounds_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/language_layout"
                >

            </LinearLayout>


            <!-- go_back_layout-->
            <LinearLayout
                android:id="@+id/go_back_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/sounds_layout"
                >

                <Button
                    android:id="@+id/btn_go_back"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/max_btn_height"
                    android:background="@drawable/skew_btn"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="@string/go_back_btn_text"
                    />

            </LinearLayout>

            <!--  home_layout -->
            <LinearLayout
                android:id="@+id/home_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/go_back_btn_layout"
                >

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/max_btn_height"
                    android:background="@drawable/skew_btn"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:text="@string/home_btn_text"
                    />

            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>