<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:orientation="vertical"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_marginLeft="@dimen/margin_10"
    android1:layout_marginRight="@dimen/margin_10"
    android1:paddingTop="@dimen/margin_10"
    android1:paddingBottom="@dimen/margin_10"
    android1:background="@drawable/blue_bcg_border"
    >
    <ImageView
        android1:layout_width="match_parent"
        android1:layout_height="@dimen/max_btn_height"
        android1:src="@drawable/kfloppy"
        android1:scaleType="center"
        android1:background="@drawable/blue_bcg_border"
        android1:contentDescription="@string/app_name"
        android1:layout_marginLeft="@dimen/margin_10"
        android1:layout_marginRight="@dimen/margin_10"
        android1:paddingTop="@dimen/margin_10"
        android1:paddingBottom="@dimen/margin_10"
        />
    <TextView
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:id="@+id/alert_dialog_tv"
        android1:textSize="@dimen/large_text"
        android1:textColor="@color/yellow"
        android1:text="@string/save_request_msg"
        android1:gravity="center"
        android1:layout_marginTop="@dimen/margin_10"
        android1:layout_marginLeft="@dimen/margin_10"
        android1:layout_marginRight="@dimen/margin_10"
        android1:paddingTop="@dimen/margin_10"
        android1:paddingBottom="@dimen/margin_10"

        />
    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:orientation="horizontal"
        android1:gravity="center"
        >
        <Button
            android1:layout_width="@dimen/max_btn_height_2"
            android1:layout_height="@dimen/max_btn_height"
            android1:id="@+id/btn_cancel"
            android1:background="@drawable/skew_btn"
            android1:text="@string/dont_save"
            android1:textColor="@color/white"
            />
        <Button
            android1:layout_width="@dimen/max_btn_height_2"
            android1:layout_height="@dimen/max_btn_height"
            android1:id="@+id/btn_confirm"
            android1:background="@drawable/skew_btn"
            android1:text="@string/save"
            android1:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>